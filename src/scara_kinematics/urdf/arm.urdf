<robot name = "test arm">
 	<link name = "base_link">
 		<visual>
			<origin xyz = "0 0 1" rpy = "0 0 0"/>
			<geometry>
				<cylinder length="2" radius = "0.1" />
			</geometry>
		</visual>
	</link>
	<link name = "base_extension">
 		<visual>
			<origin xyz = "0.5 0 0" rpy = "0 0 0"/>
			<geometry>
				<box size ="1 .1 .1" />
			</geometry>
		</visual>
	</link>
	
	<link name= "middle_link">
		<visual>
			<origin xyz = ".5 0 0" rpy = "0 0 0"/>
			<geometry>
				<box size = "1 .1 .1" />
			</geometry>
		</visual>
	</link>

	<link name= "end_link">
		<visual>
			<origin xyz = "0 0 0" rpy = "0 0 0"/>
			<geometry>
				<box size = ".1 .1 1" />
			</geometry>
		</visual>
	</link>

	<link name ="dummy_rotation_link">
	</link>

	<joint name = "theta_1" type = "continuous">
		<parent link = "base_link"/>
		<child link = "base_extension"/>
		<origin xyz = "0 0 2"/>
		<axis xyz = "0 0 1"/>
	</joint>

	<joint name = "theta_2" type = "continuous">
		<parent link = "base_extension"/>
		<child link = "middle_link"/>
		<origin xyz = "1 0 0"/>
		<axis xyz = "0 0 1"/>
	</joint>

	<joint name = "d_3" type = "prismatic">
		<parent link = "dummy_rotation_link"/>
		<child link = "end_link"/>
		<origin xyz = "1.05 0 0"/>
		<axis xyz = "0 0 1"/>
		<limit effort="30" velocity="1.0" lower="-0.5" upper="0.5"/>
	</joint>

	<joint name = "dummy_rotation" type = "revolute">
		<parent link = "middle_link"/>
		<child link = "dummy_rotation_link"/>
		<origin xyz = "0 0 0"/>
		<axis xyz = "1 0 0"/>
		<limit effort="30" velocity="1.0" lower="3.14159" upper="3.14159"/>
	</joint>

</robot>
